@{
    ViewBag.Title = "Converter";
}
<h2>@ViewBag.Message</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Miles:</h3>
        <input name="miles" type="text">
    </div>
    <div class="col-md-6">
        <h3>Select a Unit</h3>
        <fieldset class="col-md-6">
            <input type="radio" name="unit" value="millimeters" checked />millimeters<br />
            <input type="radio" name="unit" value="centimeters" />centimeters<br />
            <input type="radio" name="unit" value="meters" />meters<br />
            <input type="radio" name="unit" value="kilometers" />kilometers<br />
        </fieldset>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p><a href="" class="btn btn-primary btn-lg">Convert</a></p>
    </div>
</div>