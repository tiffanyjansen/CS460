@model AuctionHouse.Models.Item

@{
    ViewBag.Title = "Create";
}

<div class="center">
    <h2 style="font-family: Georgia, serif;">Create a New Item For Sale</h2>
</div>
<br />


<div class="form-horizontal">
    <div class="center">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ID)
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-2">
            @Html.LabelFor(model => model.Name, htmlAttributes: new
       {
           @class = "control-label;",
           @style = "font-family: Georgia, serif; font-size: 20px;"
       })
        </div>
        <div class="col-md-4">
            @Html.EditorFor(model => model.Name, new {
                htmlAttributes = new
                {
                    @class = "form-control"
                } })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-2">
            @Html.LabelFor(model => model.Description, htmlAttributes: new
                {
                    @class = "control-label;",
                    @style = "font-family: Georgia, serif; font-size: 20px;"
                })
        </div>
        <div class="col-md-4">
            @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", @rows = 2})
            @Html.ValidationMessageFor(model => model.Description)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-2">
            @Html.LabelFor(model => model.Seller, htmlAttributes: new
                {
                    @class = "control-label;",
                    @style = "font-family: Georgia, serif; font-size: 20px;"
                })
        </div>
        <div class="col-md-4">
            @Html.EditorFor(model => model.Seller, new {
                htmlAttributes = new
                {
                    @class = "form-control"
                } })
            @Html.ValidationMessageFor(model => model.Seller)
            <div class="center">
                <h4 style="color: red;">@ViewBag.Error</h4>
                <h4 style="color: red;">@ViewBag.Options</h4>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <div class="center">
                <input type="submit" value="Submit Item" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>
}
